<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.bcards.eu.bcards.MainActivity$PlaceholderFragment">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="700px"
        android:id="@+id/list_doc_types"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"></LinearLayout>

    <EditText
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_gravity="right|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/list_doc_types"
        android:layout_alignEnd="@+id/list_doc_types"
        android:layout_toRightOf="@+id/btnAddDoc"
        android:layout_toEndOf="@+id/btnAddDoc" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_add_doc"
        android:id="@+id/btnAddDoc"
        android:onClick="onBtnClicked"
        android:layout_gravity="right|bottom"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_button"/>
</RelativeLayout>
